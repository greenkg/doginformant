<div class="container m-t-md hero">
  <%= image_tag('hero-dog-ball.jpg', class: "hero-image image-responsive") %>
    <%= form_tag dogs_path, :method => 'get', class: "hero-search center-block" do %>
      <div class="form-group">
      <%= text_field_tag :search, params[:search], placeholder: "Search for a breed", class: "form-control" %>
      </div>
      <div class="form-group center-block">
        <%= button_tag "Go", name: nil, class: "btn btn-primary hero-search-btn" %>
      </div>
    <% end %>
</div>