<div class="container-fluid hero">
  <%= image_tag('http://d45j0koqy9g2z.cloudfront.net/hero-dog-ball.jpg', class: "hero-image image-responsive") %>
    
    <%= form_tag dogs_path, :method => 'get' do %>
      <div class="hero-search center-block">
        <div class="input-group">
          <%= text_field_tag :search, params[:search], placeholder: "Search for a breed", class: "form-control" %>
            <%= button_tag "Go", name: nil, class: "btn btn-search hero-search-btn" %>
          </div>
      </div>
    <% end %>
    
</div>