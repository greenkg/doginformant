<div class="breed-selector">
  <%= form_tag(dogs_breed_matcher_path, :method => "get") do %>
    <h5>Let's start with you:</h5>

    <div class="form-group check-box">
      <h6>How would you describe yourself?</h6>
      <div class="radio">
        <%= radio_button_tag(:energy, 1) %>
        <%= label_tag("My favorite activity is sitting on the couch") %>
      </div>
      <div class="radio">
        <%= radio_button_tag(:energy, 12) %>
        <%= label_tag("I like to go for the occasional walk.") %>
      </div>
      <div class="radio">
        <%= radio_button_tag(:energy, 234) %>
        <%= label_tag("I walk daily.") %>
      </div>
      <div class="radio">
        <%= radio_button_tag(:energy, 45) %>
        <%= label_tag("I run daily.") %>
      </div>        
    </div>

    <div class="form-group check-box">
      <h6>Do you have children?</h6>
      <div class="radio">
        <%= radio_button_tag(:kids, 5) %>
        <%= label_tag("Yes, 7 years old or younger") %>
      </div>
      <div class="radio">
        <%= radio_button_tag(:kids, 45) %>
        <%= label_tag("Yes, 8 years old or older") %>
      </div>
      <div class="radio">
        <%= radio_button_tag(:kids, 5) %>
        <%= label_tag("I have children in both age groups.") %>
      </div>
      <div class="radio">
        <%= radio_button_tag(:kids, 12345) %>
        <%= label_tag("I don't have children.") %>
      </div>        
    </div>

    <h5>Describe your ideal dog:</h5>

    <div class="form-group check-box">
      <h6>What size dog would you like?</h6>
      <div class="radio">
        <%= radio_button_tag(:size, "tiny") %>
        <%= label_tag("Very small--small enough to carry on an airplane.") %>
      </div>
      <div class="radio">
        <%= radio_button_tag(:size, "small") %>
        <%= label_tag("Small--doesn't stand taller than my knee.") %>
      </div>
      <div class="radio">
        <%= radio_button_tag(:size, "medium") %>
        <%= label_tag("Medium--something not too big and not too small.") %>
      </div>
      <div class="radio">
        <%= radio_button_tag(:size, "large") %>
        <%= label_tag("Something with some heft.") %>
      </div>
      <div class="radio">
        <%= radio_button_tag(:size, "very large") %>
        <%= label_tag("The bigger the better!") %>
      </div>
      <div class="radio">
        <%= radio_button_tag(:size, "all") %>
        <%= label_tag("Any size works for me.") %>
      </div>   
    </div>

    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>