<% content_for(:meta) do %>
  <meta name="All Dog Breeds" content="A list of dog breeds to help you select the perfect companion." />
<% end %>

<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">Dog Breeds</h1>
    <p class="lead text-muted">Whether you're looking for a purebred puppy, or just want to understand the potential in a mixed-breed dog, the typical breed characteristics provide some hints.</p>
    <p>
      <a href="#" class="btn btn-primary">Find your perfect dog</a>
      <a href="#" class="btn btn-secondary">Train your dog</a>
    </p>
  </div>
</section>

 <div class="album text-muted">
  <div class="container mx-auto">

    <div class="row">
      <% @dogs.each do |dog| %>
        <div class="card mx-auto">
        <%= image_tag(dog.image_file_name, alt: "Boxer Dog", class: "img-fluid") %>
        <p class="card-text"><strong><%= dog.breed %></strong> <%= dog.breed_summary %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>

